# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/life_insurance"

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, http, debug

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting Configuration (optional)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration (optional)
ENABLE_SECURITY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Monitoring Configuration (optional)
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Docker/Kubernetes Configuration (for production)
CONTAINER_NAME=life-insurance-api
SERVICE_VERSION=1.0.0

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Example Production Environment:
# NODE_ENV=production
# LOG_LEVEL=warn
# DATABASE_URL="postgresql://user:password@prod-db:5432/life_insurance_prod"
# ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com